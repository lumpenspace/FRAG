

{
  "db": {
    "path": "./db"
  } ,
  "chunker": {
    "preserve_paragraphs": true,
    "buffer_before": 10,
    "buffer_after": 10
  },
  "embeddings": {
    "model": "oai:text-embedding-3-large",
    "chunk_size": 10000,
    "chunk_overlap": 0    
  },
  "interface_model": {
    "model": "gpt-4-turbo-preview",
    "max_tokens": 1000,
    "top_p": 1,
    "frequency_penalty": 0,
    "presence_penalty": 0
  },
  "summary_model": {
    "model": "gpt-3.5",
    "temperature": 0.7,
    "max_tokens": 200
  },
  "sources": {
    "path": "./sources.yaml"
  },
  "prompts": {
    "path": "./prompts.yaml"
  }
}